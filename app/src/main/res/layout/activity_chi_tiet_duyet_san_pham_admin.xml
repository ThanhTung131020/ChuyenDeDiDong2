<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_admin"
    tools:context=".ChiTietDuyetSanPhamAdminActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Toolbar
                android:textAlignment="center"
                android:title="Duyệt Sản Phẩm"
                android:backgroundTint="@color/backgroud_cuahang"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backGround"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"/>
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="TODO">
            </ImageView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ID sản phẩm: "
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/tvIdSanPham"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Galaxy "
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tên sản phẩm: "
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/tvTenSanPham"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Galaxy "
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Giá sản phẩm: "
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/tvGia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3.0000.000"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tvMoTa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cháº¥t liá»‡u khung nhÃ´m vÃ  máº·t lÆ°ng kÃ­nh cÆ°á»ng lá»±c, KÃ­ch thÆ°á»›c, khá»‘i lÆ°á»£ng 150g"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@color/colorButtonKhachHang"
                    android:layout_marginRight="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tên cửa hàng: "
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/tvTenCuaHang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="shop1"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@color/colorButtonKhachHang"
                    android:layout_marginRight="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ID cửa hàng: "
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/tvIdCuaHang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="shop1"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/ivPic1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"/>
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ivPic2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"/>
                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/ivPic3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"/>
            </LinearLayout>
            <LinearLayout

                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button

                   android:layout_weight="3"
                    android:id="@+id/btnDuyetSP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#84D625"
                    android:layout_gravity="center"
                    android:text="DUYỆT"
                    >
                </Button>
                <Button
                    android:layout_weight="2"
                    android:backgroundTint="#F30707"
                    android:id="@+id/btnXoaSP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"


                    android:layout_gravity="center"
                    android:text="XÓA"
                    >
                </Button>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>