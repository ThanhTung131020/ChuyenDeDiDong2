<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_admin"
    android:orientation="vertical"
    tools:context=".TrangChuAdminActivity">

    <TextView
        android:id="@+id/tvAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Admin Quản Lý Tài Khoản"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="7">

        <Button
            android:id="@+id/btnTKDN"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:backgroundTint="#D9D9D9"
            android:text="tài khoản doanh nghiệp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTKCN"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:backgroundTint="#D9D9D9"
            android:text="tài khoản cá nhân"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTKNGiaoHang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:backgroundTint="#D9D9D9"
            android:text="tài khoản người giao hàng"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnDKShop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:backgroundTint="#D9D9D9"
            android:text="Đăng ký cửa hàng"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDKSHipper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:backgroundTint="#D9D9D9"
            android:text="Đăng ký người giao hàng"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnDuyetSP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:backgroundTint="#D9D9D9"
            android:text="Duyệt sản phẩm"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDangXuat_Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_weight="1"
            android:backgroundTint="#4697D1"
            android:text="đăng xuất"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>